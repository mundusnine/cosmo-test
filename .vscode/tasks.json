{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build knob",
            "linux":{
                "type": "shell",
                "command": "${workspaceFolder}/cosmocc/bin/cosmocc",
                "args": [
                    "-g",
                    "${workspaceFolder}/knob.c",
                    "-o",
                    "knob.com"
                ],
            },
            "windows":{
                "command": "",
                "args": []
            }
            
        },
        {
            "label": "Build app",
            "type": "shell",
            "command": "${workspaceFolder}/knob.com",//"${workspaceFolder}/Tools/windows_x64/zig.exe",
            "dependsOn": "Build knob",
        },
        {
            "label": "Build dll",
            "type": "shell",
            "command": "${workspaceFolder}/knob.com",//"${workspaceFolder}/Tools/windows_x64/zig.exe",
            "args": ["--dll"],
            "dependsOn": "Build knob",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}